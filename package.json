{
  "name": "hateoasis",
  "version": "1.0.3",
  "description": "An automatic HATEOAS traversing client.",
  "main": "dist/hateoasis.js",
  "types": "dist/hateoasis.d.ts",
  "repository": "http://github.com/gnarr/hateoasis",
  "keywords": [
    "HATEOAS",
    "hateoasis",
    "hateoasify",
    "Hypermedia as the Engine of Application State",
    "Hypermedia",
    "traverser",
    "HATEOAS traverser",
    "link releations",
    "Hateos Oasis"
  ],
  "author": "Gunnar Cortes Heimisson",
  "license": "ISC",
  "files": [
    "dist/hateoasis.js",
    "dist/hateoasis.d.ts"
  ],
  "scripts": {
    "dev": "npx ts-node src/hateoasis.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.ts\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "prepublishOnly": "npm test && npm run lint && npm run release",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src --no-verify",
    "postversion": "git push --no-verify && git push --tags --no-verify",
    "release": "HUSKY_SKIP_HOOKS=1 standard-version --no-verify"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "npm run lint --fix",
      "npm run format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "axios": "^0.21.1",
    "commitizen": "^4.2.3",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "axios": "^0.20.0-0"
  }
}
